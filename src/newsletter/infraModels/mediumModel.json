{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Building A VPC From Scratch With CloudFormation",
  "Resources": {
    "VpcCF": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "EnableDnsSupport": "true",
        "EnableDnsHostnames": "true",
        "CidrBlock": "10.0.0.0/16",
        "Tags": [
          {
            "Key": "Application",
            "Value": {
              "Ref": "AWS::StackName"
            }
          },
          {
            "Key": "Network",
            "Value": "Public"
          },
          {
            "Key": "Name",
            "Value": "VpcCF"
          }
        ]
      }
    },
    "PubSub1CF": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "VpcCF"
        },
        "CidrBlock": "10.0.1.0/24",
        "AvailabilityZone": "eu-west-2a",
        "Tags": [
          {
            "Key": "Application",
            "Value": {
              "Ref": "AWS::StackName"
            }
          },
          {
            "Key": "Network",
            "Value": "Public"
          },
          {
            "Key": "Name",
            "Value": "PubSub1CF"
          }
        ]
      }
    },
    "PriSub1CF": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "VpcCF"
        },
        "CidrBlock": "10.0.3.0/24",
        "AvailabilityZone": "eu-west-2a",
        "Tags": [
          {
            "Key": "Application",
            "Value": {
              "Ref": "AWS::StackName"
            }
          },
          {
            "Key": "Network",
            "Value": "Public"
          },
          {
            "Key": "Name",
            "Value": "PriSub1CF"
          }
        ]
      }
    },
    "InternetGateway": {
      "Type": "AWS::EC2::InternetGateway",
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "Value": "IGCF"
          }
        ]
      }
    },
    "GatewayToInternet": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "VpcId": {
          "Ref": "VpcCF"
        },
        "InternetGatewayId": {
          "Ref": "InternetGateway"
        }
      }
    },
    "PublicRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "VpcCF"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "PubRTCF"
          }
        ]
      }
    },
    "PublicRoute": {
      "Type": "AWS::EC2::Route",
      "DependsOn": "GatewayToInternet",
      "Properties": {
        "RouteTableId": {
          "Ref": "PublicRouteTable"
        },
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": {
          "Ref": "InternetGateway"
        }
      }
    },
    "PublicSubnetRouteTableAssociation1": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "PubSub1CF"
        },
        "RouteTableId": {
          "Ref": "PublicRouteTable"
        }
      }
    },
    "PrivateRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "VpcCF"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "PriRTCF"
          }
        ]
      }
    },
    "PrivateSubnetRouteTableAssociation1": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "PriSub1CF"
        },
        "RouteTableId": {
          "Ref": "PrivateRouteTable"
        }
      }
    },
    "PublicNACL": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
        "VpcId": {
          "Ref": "VpcCF"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "PubNACL"
          }
        ]
      }
    },
    "PublicNetworkAclEntryEgress": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PublicNACL"
        },
        "RuleNumber": "100",
        "Protocol": "-1",
        "RuleAction": "allow",
        "Egress": "true",
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "-1",
          "To": "-1"
        }
      }
    },
    "PublicNetworkAclEntryIngress": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PublicNACL"
        },
        "RuleNumber": "100",
        "Protocol": "-1",
        "RuleAction": "allow",
        "Egress": "false",
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "-1",
          "To": "-1"
        }
      }
    },
    "PublicSubnetNetworkAclAssociation1": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "PubSub1CF"
        },
        "NetworkAclId": {
          "Ref": "PublicNACL"
        }
      }
    },
    "PrivateNACL": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
        "VpcId": {
          "Ref": "VpcCF"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "PriNACL"
          }
        ]
      }
    },
    "PrivateNetworkAclEntryEgress": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PrivateNACL"
        },
        "RuleNumber": "100",
        "Protocol": "-1",
        "RuleAction": "allow",
        "Egress": "true",
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "-1",
          "To": "-1"
        }
      }
    },
    "PrivateNetworkAclEntryIngress": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "NetworkAclId": {
          "Ref": "PrivateNACL"
        },
        "RuleNumber": "100",
        "Protocol": "-1",
        "RuleAction": "allow",
        "Egress": "false",
        "CidrBlock": "0.0.0.0/0",
        "PortRange": {
          "From": "-1",
          "To": "-1"
        }
      }
    },
    "PrivateSubnetNetworkAclAssociation1": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": {
          "Ref": "PriSub1CF"
        },
        "NetworkAclId": {
          "Ref": "PrivateNACL"
        }
      }
    },
    "Ec2SecurityGroup1": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Allow all to client host",
        "VpcId": {
          "Ref": "VpcCF"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Ec2SGCF"
          }
        ],
        "SecurityGroupIngress": [
          {
            "IpProtocol": "-1",
            "FromPort": "-1",
            "ToPort": "-1",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "SecurityGroupEgress": [
          {
            "IpProtocol": "-1",
            "FromPort": "-1",
            "ToPort": "-1",
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },

    "Ec2SecurityGroup2": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Allow all to client host",
        "VpcId": {
          "Ref": "VpcCF"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Ec2SGCF"
          }
        ],
        "SecurityGroupIngress": [
          {
            "IpProtocol": "-1",
            "FromPort": "-1",
            "ToPort": "-1",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "SecurityGroupEgress": [
          {
            "IpProtocol": "-1",
            "FromPort": "-1",
            "ToPort": "-1",
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },

    "PublicAppLaunchConfiguration": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "AssociatePublicIpAddress": "true",
        "ImageId": "ami-0708175939932fc75",
        "InstanceType": "t2.micro",
        "KeyName" : "newkp",
        "Tags" : [{"Key" : "Name", "Value" : "PubEc2CF"}],
        "SecurityGroups": [
          {
            "Ref": "Ec2SecurityGroup1"
          }
        ]
      },
      "DependsOn": "GatewayToInternet"
    },
    "PublicAppASG": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "AvailabilityZones": ["eu-west-2a"],
        "DesiredCapacity": 1,
        "LaunchConfigurationName": {
          "Ref": "PublicAppLaunchConfiguration"
        },
        "MaxSize": 2,
        "MinSize": 1,
        "VPCZoneIdentifier": [
          {
            "Ref": "PubSub1CF"
          }
        ]
      }
    },
    "PrivateAppLaunchConfiguration": {
        "Type": "AWS::AutoScaling::LaunchConfiguration",
        "Properties": {
          "AssociatePublicIpAddress": "false",
          "ImageId": "ami-00ee3b59e07408c27",
          "InstanceType": "t2.micro",
          "KeyName" : "newkp",
          "Tags" : [{"Key" : "Name", "Value" : "PriEc2CF"}],
          "SecurityGroups": [
            {
              "Ref": "Ec2SecurityGroup2"
            }
          ]
        },
        "DependsOn": "GatewayToInternet"
      },
      "PrivateAppASG": {
        "Type": "AWS::AutoScaling::AutoScalingGroup",
        "Properties": {
          "AvailabilityZones": ["eu-west-2a"],
          "DesiredCapacity": 1,
          "LaunchConfigurationName": {
            "Ref": "PrivateAppLaunchConfiguration"
          },
          "MaxSize": 2,
          "MinSize": 1,
          "VPCZoneIdentifier": [
            {
              "Ref": "PriSub1CF"
            }
          ]
        }
      }
    }

}
